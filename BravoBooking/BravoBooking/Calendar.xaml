<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BravoBooking.Calendar" >
    <StackLayout Padding="20" Spacing="10" BackgroundColor="#302b23" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
        <Label Text="Dato" Grid.Row="0" Grid.Column="0" TextColor="#be1d62"/>
        <DatePicker x:Name="MainDatePicker"  Format="dd-MM-YYYY" MinimumDate="1/1/2017" MaximumDate="12/31/2017" DateSelected="DatePicker_OnDateSelected"/>
        <Label x:Name="MainLabel" Text="{Binding Date, Source={x:Reference MainDatePicker}}" FontSize="30" HorizontalOptions="Center" TextColor="White"/>
        <Label Text="Starttidspunkt" Grid.Row="0" Grid.Column="0" TextColor="#be1d62"/>
        <TimePicker x:Name="StartTime" Time="{Binding Item.StartTime}" Grid.Row="1" Grid.Column="0"/>

        <Label Text="Sluttidspunkt" Grid.Row="0" Grid.Column="1" TextColor="#be1d62"/>
        <TimePicker x:Name="EndTime" Time="{Binding Item.EndTime}" Grid.Row="1" Grid.Column="1"/>
        <Label Grid.Row="0" Grid.Column="1" TextColor="#be1d62" Text="Liste over ledige rom på valgt dato"/>
    </StackLayout>
</ContentPage>