<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BravoBooking.Calendar">
    <StackLayout Padding="20" Spacing="10" BackgroundColor="White" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
        <DatePicker x:Name="MainDatePicker" MinimumDate="5/5/2017" MaximumDate="10/8/2017" DateSelected="DatePicker_OnDateSelected"/>
        <Label x:Name="MainLabel" Text="{Binding Date, Source={x:Reference MainDatePicker}}" FontSize="30" HorizontalOptions="Center" TextColor="White"/>
       
    </StackLayout>
</ContentPage>